{% include 'layout/header.twig' %}


<div class="container">
    <div class="row main">
        <div class="main-login main-center">

            <div class="form-group">

                {% if messages.error %}
                    <div class="alert alert-danger">
                        {{  messages.error }}
                    </div>
                {% endif %}


                {% if messages.success %}
                    <div class="alert alert-success">
                        {{  messages.success }}
                    </div>
                {% endif %}

            </div>
            <form class="" method="post" action="/editUser">

                <div class="form-group">
                    <label for="editUsername" class="cols-sm-2 control-label">Username</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="editUsername" id="editUsername"  value="{{ user.username }}"/>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label for="editEmail" class="cols-sm-2 control-label">Email</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            <input type="email" class="form-control" name="editEmail" id="editEmail" value="{{ user.email }}"/>
                        </div>
                    </div>
                </div>

                <div class="form-group ">
                    <input type="submit" id="validEdit" class="btn btn-primary btn-lg btn-block login-button" value="Editer">
                </div>

            </form>
        </div>
    </div>
</div>

{%  include 'layout/footer.twig' %}